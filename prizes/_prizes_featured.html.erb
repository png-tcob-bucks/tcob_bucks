<% if @featured.blank? %>
	<p>None</p>
<% else %>
<ul>
	<% @featured.each do |p| %>
    <%= link_to controller: :prizes, action: :show, id: p.id do %>
      <div class = "featured-store-container" style="background-image: url('<%= p.get_first_image %>')">
        <div class = "header">
          <div class = "price">$<%= p.cost %></div>
             <p class = "name"><b><%= p.name %></b></p>
          </div>
       </div>
  <% end %>
<% end end %>
</ul>
