<% if @roles.blank? %>
	<p>There are no roles.</p>
<% else %>
	<table class = 'table table-striped table-bordered table-condensed'>
		<thead>
			<th>Title</th>
			<th>App Access</th>
			<th>Issue</th>
			<th>Earn</th>
			<th>Approve</th>
			<th>Redeem</th>
			<th>Issue Gold</th>
			<th>Inventory</th>
			<th>View Dept</th>
			<th>View All</th>
			<th>FeedBack</th>
			<th>Admin</th>
			<th>Change</th>
		</thead>
		<tbody>
		<% @roles.each do |r|  %>
			<tr class = "tr-clickable" onclick=" window.document.location = ''; ">
				<td> <%= r.title %> </td>
				<td class="center-text"> <% if r.access? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.issue? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.recieve? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.approve? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.redeem? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.issue_gold? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.inventory? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.view_dept? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.view_all? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.feedback? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> <% if r.admin? %> <span class="fa fa-check"></span> <% end %> </td>
				<td class="center-text"> 
				<%= link_to 'Assign', { action: :assign, id: r} %> |
				<%= link_to 'Edit', { action: :edit, id: r} %> | 
				<%= link_to 'Delete', { action: :delete, id: r}, data: {confirm: "Are you sure?"} %> </td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>