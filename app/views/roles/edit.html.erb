<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default panel-body">
      <%= form_tag :action => 'update' do %>

        <p><label for = "title">Title</label>:<br>
        <%= text_field 'role', 'title', class: 'form-control' %></p>
          <p><%= label_tag('access', "Overall Access: ") %>
            <%= check_box 'role', 'access', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('issue', "Issue Bucks: ") %>
            <%= check_box 'role', 'issue', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('recieve', "Earn Bucks: ") %>
            <%= check_box 'role', 'recieve', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('approve', "Approve Bucks: ") %>
            <%= check_box 'role', 'approve', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('redeem', "Redeem Bucks: ") %>
            <%= check_box 'role', 'redeem', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('issue_gold', "Issue Gold 100% Bucks: ") %>
            <%= check_box 'role', 'issue_gold', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('inventory', "Manage Inventory: ") %>
            <%= check_box 'role', 'inventory', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('view_dept', "View Department: ") %>
            <%= check_box 'role', 'view_dept', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('view_all', "View All: ") %>
            <%= check_box 'role', 'view_all', {}, 'true', 'false' %><br>
          </p>
          <p><%= label_tag('admin', "Administrator: ") %>
            <%= check_box 'role', 'admin', {}, 'true', 'false' %><br>
          </p>
        <br>
        <%= submit_tag 'Submit', class: "btn btn-primary" %><a href="/roles"><div class = "btn btn-primary push-left-10">Cancel</div></a>
      <% end -%>
    </div>
  </div>
</div>