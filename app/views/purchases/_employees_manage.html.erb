<% if @employees.blank? %>
	<p>None</p>
<% else %>
<div class="table-responsive">
	<table class = "table table-striped">
		<thead>
			<th>Employee #</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Department</th>
			<th>Status</th>
		</thead>
		<tbody>
			<% @employees.each do |e| 
			@dept = Department.find(e.department_id) %>
				<tr class = "tr-clickable" onclick = "window.document.location = 'manage?ut8=âœ“&employee=<%= e.id %>'">
				<td> <%= e.id %> </td>
				<td> <%= e.first_name %> </td>
				<td> <%= e.last_name %> </td>
				<td> <%= @dept.name %> </td>
				<td> <%= e.status %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<% end %>