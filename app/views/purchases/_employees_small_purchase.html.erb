<% if @employees.blank? %>
	<p>None</p>
<% else %>
<div class="table-responsive">
	<table class = "table">
		<thead>
			<th>Employee #</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Department</th>
			<th>Status</th>
		</thead>
		<tbody>
			<% @employees.each do |e| 
			@dept = Department.find(e.department_id) %>
			<% if e.status == 'Active' %>
				<tr class = "success tr-clickable" onclick = "window.document.location = 'finish/<%= e.id %>'">
			<% else %>
				<tr class = "danger" >
			<% end %>
				<td> <%= e.id %> </td>
				<td> <%= e.first_name %> </td>
				<td> <%= e.last_name %> </td>
				<td> <%= @dept.name %> </td>
				<td> <%= e.status %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
</tr>
<% end %>