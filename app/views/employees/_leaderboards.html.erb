<div id="leaderboardsCarousel" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <div class="table-responsive">
        <h4>Attendance</h4>
        <table class="table table-striped table-condensed">
          <thead>
          <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Bucks</th>
          </tr>
          </thead>
          <tbody>
          <% rank = 1
             @top_attendance.each do |a| %>
              <tr>
                <td> <b><%= rank %>.</b> </td>
                <td> <%= Employee.find(a.IDnum).full_name %> </td>
                <td> <%= a.bucks_count %> </td>
              </tr>
          <% rank = rank + 1
             end %>
          </tbody>
        </table>
      </div>
    </div>

